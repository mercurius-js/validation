{
  "name": "mercurius-validation",
  "version": "6.0.1",
  "description": "Mercurius Validation Plugin adds configurable Validation support to Mercurius.",
  "main": "index.js",
  "types": "index.d.ts",
  "scripts": {
    "unit": "borp --no-typescript --timeout 300000 --reporter spec 'test/**/*.js'",
    "cov": "borp --coverage --no-typescript --check-coverage --lines 100 --functions 100 --statements 100 --branches 100 --timeout 300000 --reporter spec 'test/**/*.js'",
    "lint": "npm run lint:standard",
    "lint:standard": "standard | snazzy",
    "lint:typescript": "standard --parser @typescript-eslint/parser --plugin @typescript-eslint/eslint-plugin index.d.ts test/types/*.ts | snazzy",
    "typescript": "tsd",
    "test": "npm run lint && npm run unit && npm run typescript"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mercurius-js/validation.git"
  },
  "author": "Jonny Green <hello@jonnydgreen.com>",
  "contributors": [
    {
      "name": "Matteo Collina",
      "email": "hello@matteocollina.com"
    },
    {
      "name": "Simone Sanfratello",
      "email": "simone@braceslab.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mercurius-js/validation/issues"
  },
  "homepage": "https://github.com/mercurius-js/validation",
  "devDependencies": {
    "@fastify/pre-commit": "^2.2.1",
    "@mercuriusjs/federation": "^5.0.0",
    "@mercuriusjs/gateway": "^5.0.0",
    "@sinonjs/fake-timers": "^15.0.0",
    "@types/node": "^25.0.3",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "autocannon": "^8.0.0",
    "borp": "^0.21.0",
    "concurrently": "^9.2.1",
    "fastify": "^5.6.2",
    "mercurius": "^16.6.0",
    "snazzy": "^9.0.0",
    "standard": "^17.1.2",
    "tsd": "^0.33.0",
    "typescript": "^5.9.3",
    "wait-on": "^9.0.3"
  },
  "dependencies": {
    "@fastify/error": "^4.2.0",
    "ajv": "^8.17.1",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
    "fastify-plugin": "^5.1.0",
    "graphql": "^16.12.0"
  },
  "tsd": {
    "directory": "./test/types"
  },
  "directories": {
    "lib": "lib",
    "test": "test"
  },
  "pre-commit": [
    "test"
  ]
}
