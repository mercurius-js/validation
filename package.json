    },
    {
      "name": "Simone Sanfratello",
      "email": "simone@braceslab.com"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mercurius-js/validation/issues"
  },
  "homepage": "https://github.com/mercurius-js/validation",
  "devDependencies": {
    "@mercuriusjs/federation": "^5.0.0",
