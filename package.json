    "tsd": "^0.31.0",
    "typescript": "^5.4.2",
    "wait-on": "^8.0.0"
  },
  "dependencies": {
    "@fastify/error": "^4.0.0",
    "ajv": "^8.6.2",
    "ajv-errors": "^3.0.0",
    "ajv-formats": "^3.0.1",
